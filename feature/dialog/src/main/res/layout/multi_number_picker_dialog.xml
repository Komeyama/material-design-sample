<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <NumberPicker
        android:id="@+id/dialog_number_picker_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_number_picker_01"
        app:layout_constraintBottom_toBottomOf="parent" />

    <NumberPicker
        android:id="@+id/dialog_number_picker_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_number_picker_00"
        app:layout_constraintEnd_toStartOf="@+id/multi_number_picker_middle"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/multi_number_picker_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_type_multi_number_picker_middle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_number_picker_01"
        app:layout_constraintEnd_toStartOf="@+id/dialog_number_picker_02"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <NumberPicker
        android:id="@+id/dialog_number_picker_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/multi_number_picker_middle"
        app:layout_constraintEnd_toStartOf="@+id/dialog_number_picker_03"
        app:layout_constraintBottom_toBottomOf="parent" />

    <NumberPicker
        android:id="@+id/dialog_number_picker_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_number_picker_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>