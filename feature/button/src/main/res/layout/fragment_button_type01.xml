<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/button_enabled_toggle_type01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/button_activity_off"
        android:textOff="@string/button_activity_on"
        android:textAllCaps="false"
        android:checked="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textButton01"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/textButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_type_01_text01"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/button_enabled_toggle_type01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textButton02"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/textButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_type_01_text02"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/textButton01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textButton03"
        style="?attr/materialButtonOutlinedStyle"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/textButton03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_type_01_text03"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/textButton02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textButton04" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/textButton04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:icon="@drawable/ic_format_align_center_black_24dp"
        app:rippleColor="@drawable/button_state_ripple"
        app:strokeColor="@color/colorLightGray"
        app:iconTint="@drawable/icon_button_state"
        app:backgroundTint="@drawable/button_state"
        app:layout_constraintTop_toBottomOf="@+id/textButton03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>

</androidx.constraintlayout.widget.ConstraintLayout>