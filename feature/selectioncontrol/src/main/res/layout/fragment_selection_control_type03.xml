<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/selection_action_checkbox_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selection_control_option_00"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:buttonTintMode="multiply"
        android:theme="@style/CheckBoxTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/selection_action_checkbox_detail"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selection_action_checkbox_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/selection_action_checkbox_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/selection_action_checkbox_detail_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selection_control_option_01"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:theme="@style/CheckBoxTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/selection_action_checkbox_detail_02"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <CheckBox
            android:id="@+id/selection_action_checkbox_detail_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selection_control_option_02"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:theme="@style/CheckBoxTheme"
            app:layout_constraintTop_toBottomOf="@+id/selection_action_checkbox_detail_01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/selection_action_checkbox_detail_03"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <CheckBox
            android:id="@+id/selection_action_checkbox_detail_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selection_control_option_03"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:theme="@style/CheckBoxTheme"
            app:layout_constraintTop_toBottomOf="@+id/selection_action_checkbox_detail_02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/selection_action_checkbox_detail_04"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <CheckBox
            android:id="@+id/selection_action_checkbox_detail_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selection_control_option_04"
            android:layout_marginTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:theme="@style/CheckBoxTheme"
            app:layout_constraintTop_toBottomOf="@+id/selection_action_checkbox_detail_03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>